@model IList<ContaWeb.Models.ContaCorrente>

@{
    ViewBag.Title = "Listar";
}


<h2>Consulta de Contas</h2>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>SELECIONE</h5>&ensp;
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-4">
                            <label>Conta</label>
                            @*<input id="nrConta" type="text" class="form-control" />*@
                            @Html.DropDownList("Conta", null, "-- Selecione --", htmlAttributes: new { @class = "form-control form-control-sm" })
                        </div>

                        @*<div class="col-lg-4">
                            <label>Nome</label>
                            <input id="nomeConta" type="text" class="form-control" />
                        </div>*@

                        <div class="col-lg-4">
                            <label>&ensp;</label>
                            <button id="btnBuscar" onclick="Buscar()" class="btn btn-outline-success"><i class="fa fa-search"></i> Pesquisar</button>
                        </div>
                    </div>
                </div>
            </div>
         </div>
     </div>
</div>


    <div class="row">
    @* PRINT DOS DADOS DA CONTA - BUSCA FEITA PELO NUMERO DA CONTA *@
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                @*<h5>Lista</h5>*@
            </div>
            <div class="ibox-content">
                <div id="listaConta">
                </div>
            </div>

        </div>
    </div>
</div>

<script src="~/Content/js/Conta.js"></script>

    <script type="text/javascript">
        debugger
        var Buscar = function () {

            //alert("oie");

            $("#listaConta").load('Buscar?idConta=' + $("#Conta option:selected").val() +
                '&nomeConta' + $("#nomeConta").val(), function () { });

        }

    </script>
