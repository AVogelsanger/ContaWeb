
@{
    ViewBag.Title = "Buscar";
}

<h2>Contas</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                @*<h5>Conta</h5>*@
            </div>
            <div class="ibox-content">

                <table class="table table-striped table-hover">
                    <tr>
                        <th>Agência</th>
                        <th>Conta</th>
                        <th>Nome</th>
                        <th>Saldo</th>
                        <th></th>
                        <th>Transação</th>
                        @*<th>EDITAR</th>*@
                    </tr>


                    @foreach (var conta in Model)
                    {
                        <tr>
                            <td>@conta.Agencia</td>
                            <td>@conta.NumeroConta</td>
                            <td>@conta.Nome</td>
                            <td>@conta.Saldo</td>
                            <td></td>
                            <td>
                                <button onclick="depConta.value = @conta.Saldo" type="button" class="btn btn-primary btn-xs"
                                        data-toggle="modal" data-target="#myModal">
                                    Depositar
                                </button>
                     
                                <button onclick="sacConta.value = @conta.Saldo" type="button" class="btn btn-danger btn-xs"
                                        data-toggle="modal" data-target="#myModal">
                                    Sacar
                                </button>
                            </td>

                        </tr>
                    }
                </table>

            </div>
        </div>
    </div>
</div>

<!-- Modal dep-->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Confirmação</h4>
            </div>
            <div class="modal-body">
                <label>
                    Digite o valor que deseja depositar?
                </label>

</div>
            <div class="modal-footer">
                @using (Html.BeginForm("Depositar", "Conta"))
                {
                    <div class="form-group">

                        <div class="col-md-10">
                            <label>R$</label>
                            <input type="text" id="money" class="form-control" />
                        </div>
                    </div>
                    <input type="hidden" name="id" id="depConta" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" id="Depositar"class="btn btn-primary">Depositar</button>
                }
            </div>
        </div>
    </div>
</div>


<!-- Modal sac-->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Confirmação</h4>
            </div>
            <div class="modal-body">
                <label>
                    Digite o valor que deseja sacar?
                </label>

                <div class="form-group">

                    <div class="col-md-10">
                        <label>R$</label>
                        <input type="text" id="money" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Sacar", "Conta"))
                {
                    <input type="hidden" name="id" id="sacConta" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Depositar</button>
                }
            </div>
        </div>
    </div>
</div>
