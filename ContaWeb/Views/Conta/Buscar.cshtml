@model List<ContaWeb.Models.ContaCorrente>

@{
    ViewBag.Title = "Buscar";
}

<h2>Contas</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                @*<h5>Conta</h5>*@
            </div>
            <div class="ibox-content">

                <table class="table table-striped table-hover">
                    <tr>
                        <th>Agência</th>
                        <th>Conta</th>
                        <th>Nome</th>
                        <th>Saldo</th>
                        <th></th>
                        <th>Transação</th>
                    </tr>


                    @foreach (var conta in Model)
                    {
                        <tr>
                            <td>@conta.Agencia</td>
                            <td>@conta.NumeroConta</td>
                            <td>@conta.Nome</td>
                            <td>@conta.Saldo</td>
                            <td></td>
                            <td>
                                <button onclick="depConta.value = @conta.ID" type="button" class="btn btn-primary btn-xs"
                                        data-toggle="modal" data-target="#myModal1">
                                    Depositar
                                </button>
                     
                                <button onclick="sacConta.value = @conta.ID" type="button" class="btn btn-danger btn-xs"
                                        data-toggle="modal" data-target="#myModal2">
                                    Sacar
                                </button>
                            </td>
                        </tr>
                    }
                </table>

            </div>
        </div>
    </div>
</div>



<!-- Modal dep-->
<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Confirmação</h4>
            </div>
            @using (Html.BeginForm("Depositar", "Conta", FormMethod.Post))
            {
            <div class="modal-body">
                <label>
                    Digite o valor que deseja depositar?
                </label>
                <div class="form-group">
                    <div class="col-md-10">
                        <label>R$</label>
                        <input type="text" name="money" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
            <input type="hidden" name="id" id="depConta" />
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Depositar</button>
                
            </div>
            }
        </div>
    </div>
</div>


<!-- Modal sac-->
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Confirmação</h4>
            </div>
            @using (Html.BeginForm("Sacar", "Conta", FormMethod.Post))
            {
                <div class="modal-body">
                    <label>
                        Digite o valor que deseja sacar?
                    </label>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>R$</label>
                            <input type="text" name="money" class="form-control" />
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="sacConta" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Sacar</button>

                </div>
            }
        </div>
    </div>
</div>



