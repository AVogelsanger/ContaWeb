
@{
    ViewBag.Title = "Buscar";
}

<h2>Contas</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                @*<h5>Conta</h5>*@
            </div>
            <div class="ibox-content">

                <table class="table table-striped table-hover">
                    <tr>
                        <th>Agência</th>
                        <th>Conta</th>
                        <th>Nome</th>
                        <th>Saldo</th>
                        <th></th>
                        <th></th>
                        @*<th>EDITAR</th>*@
                    </tr>


                    @foreach (var conta in Model)
                    {
                        <tr>
                            <td>@conta.Agencia</td>
                            <td>@conta.NumeroConta</td>
                            <td>@conta.Nome</td>
                            <td>@conta.Saldo</td>
                            <td></td>
                            <td>
                                @*@Html.ActionLink("Editar", "Alterar", new { id = conta.ID },
                                    new { @class = "btn btn-info btn-xs" })*@
                            </td>

                        </tr>
                    }
                </table>

            </div>
        </div>
    </div>
</div>