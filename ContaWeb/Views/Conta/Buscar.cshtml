@model List<ContaWeb.Models.ContaCorrente>

@{
    ViewBag.Title = "Buscar";
}

<h2>Contas</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                @*<h5>Conta</h5>*@
            </div>
            <div class="ibox-content">

                <table class="table table-striped table-hover">
                    <tr>
                        <th>Agência</th>
                        <th>Conta</th>
                        <th>Nome</th>
                        <th>Saldo</th>
                        <th></th>
                        <th>Transação</th>
                        @*<th>EDITAR</th>*@
                    </tr>


                    @foreach (var conta in Model)
                    {
                        <tr>
                            <td>@conta.Agencia</td>
                            <td>@conta.NumeroConta</td>
                            <td>@conta.Nome</td>
                            <td>@conta.Saldo</td>
                            <td></td>
                            <td>
                                <button onclick="depConta.value = @conta.ID" type="button" class="btn btn-primary btn-xs"
                                        data-toggle="modal" data-target="#myModal1">
                                    Depositar
                                </button>
                     
                                <button onclick="sacConta.value = @conta.ID" type="button" class="btn btn-danger btn-xs"
                                        data-toggle="modal" data-target="#myModal2">
                                    Sacar
                                </button>
                            </td>

                        </tr>
                    }
                </table>

            </div>
        </div>
    </div>
</div>

<!-- Modal dep-->
<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Confirmação</h4>
            </div>
            <div class="modal-body">
                <label>
                    Digite o valor que deseja sacar?
                </label>

                <div class="form-group">

                    <div class="col-md-10">
                        <div class="form-group">

                            <form method="post" action="/Conta/Cadastrar">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">R$</label>
                                    <div class="col-md-10">
                                        <input name="movimentacao" type="text" class="form-control" value="Movimentacao" placeholder="R$" />
                                        @*@Html.EditorFor(model => model, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Agencia, "", new { @class = "text-danger" })*@
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Depositar", "Conta"))
            {
                    <input type="hidden" name="id" id="depConta" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Depositar</button>
                }
            </div>
        </div>
    </div>
</div>



<!-- Modal sac-->
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Confirmação</h4>
            </div>
            <div class="modal-body">
                <label>
                    Digite o valor que deseja sacar?
                </label>

                <div class="form-group">

                    <div class="col-md-10">
                        <label>R$</label>
                        <input type="text" id="money" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Sacar", "Conta"))
                {
                    <input type="hidden" name="id" id="sacConta" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Depositar</button>
                }
            </div>
        </div>
    </div>
</div>


